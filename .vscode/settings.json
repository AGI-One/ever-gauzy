{
	"cSpell.userWords": [],
	"cSpell.enabled": true,
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"npm.packageManager": "yarn",
	"prettier.trailingComma": "none",
	"prettier.singleQuote": true,
	"editor.formatOnSave": true,
	"eslint.format.enable": true,
	"editor.tabSize": 4,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit"
	},
	"vsicons.presets.angular": true,
	"deepscan.enable": true,
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/node_modules": true,
		"**/public/**/*.png": true,
		"**/public/**/*.jpg": true,
		"**/public/**/*.pdf": true
	},
	"angular.enable-strict-mode-prompt": false,
	"nxConsole.generateAiAgentRules": true,
	"i18n-ally.localesPaths": [
		"packages/ui-core/i18n",
		"packages/core/src/lib/i18n",
		"packages/core/src/lib/language",
		"packages/desktop-ui-lib/src/lib/language",
		"packages/ui-core/i18n/assets/i18n",
		"packages/ui-core/shared/src/lib/language",
		"packages/ui-core/core/src/lib/services/language"
	]
}
